{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "World map (wider) + Top-30 bars with shared binned colour scale.",
  "spacing": 24,
  "hconcat": [
    {
      "title": "World map (kWh/person)",
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/main/data/world-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "transform": [
        { "lookup": "id",
          "from": { "data": { "url": "https://raw.githubusercontent.com/KoGor/Map-Icons-Generator/master/data/world-110m-country-names.tsv", "format": { "type": "tsv" } },
                    "key": "id", "fields": ["name"] } },
        { "lookup": "name",
          "from": { "data": { "url": "https://raw.githubusercontent.com/ananya21233/FIT3179_Assignment_2/main/data/global_2.csv" },
                    "key": "Entity", "fields": ["Value","Entity"] } },
        { "calculate": "toNumber(datum.Value)", "as": "Metric" }
      ],
      "projection": { "type": "equalEarth" },
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.3 },
      "width": 700,        
      "height": 420,       
      "encoding": {
        "color": {
          "field": "Metric", "type": "quantitative",
          "bin": { "maxbins": 5 }, "scale": { "scheme": "reds" },
          "legend": { "title": "kWh/person (binned)" }
        },
        "tooltip": [
          { "field": "name", "title": "Country" },
          { "field": "Metric", "title": "Per-capita (kWh/person)", "format": ",.0f" }
        ]
      }
    },
    {
      "title": "Per-Capita Energy Use â€” Top 30",
      "data": { "url": "https://raw.githubusercontent.com/ananya21233/FIT3179_Assignment_2/main/data/global_2.csv" },
      "transform": [
        { "calculate": "toNumber(datum.Value)", "as": "Metric" },
        { "window": [{ "op": "rank", "as": "rank" }], "sort": [{ "field": "Metric", "order": "descending" }] },
        { "filter": "datum.rank <= 30" }
      ],
      "mark": { "type": "bar", "cornerRadiusEnd": 6 },
      "width": 480,        
      "height": { "step": 18 },  
      "encoding": {
        "y": { "field": "Entity", "type": "nominal", "sort": "-x", "title": null },
        "x": { "field": "Metric", "type": "quantitative", "title": "kWh per person", "axis": { "format": ",.0f" } },
        "color": {
          "field": "Metric", "type": "quantitative",
          "bin": { "maxbins": 5 }, "scale": { "scheme": "reds" }, "legend": null
        },
        "tooltip": [
          { "field": "Entity", "title": "Country" },
          { "field": "Metric", "title": "Per-capita (kWh/person)", "format": ",.0f" }
        ]
      }
    }
  ],
  "resolve": { "scale": { "color": "shared" } },
  "config": { "view": { "stroke": null }, "background": "#f9fafb" }
}