{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f9fafb",
  "autosize": { "type": "fit", "contains": "padding" },
  "padding": { "left": 8, "right": 8, "top": 6, "bottom": 6 },
  "config": {
    "font": "'Times New Roman', Times, serif"
   },
  "vconcat": [
    {
      "width": "container",
      "height": 380,
      "data": {
        "url": "https://raw.githubusercontent.com/ananya21233/FIT3179_Assignment_2/main/data/energy_consumption_by_source.csv"
      },
      "transform": [
        {
          "fold": [
            "Solar consumption - TWh",
            "Wind consumption - TWh",
            "Coal consumption - TWh",
            "Gas consumption - TWh",
            "Oil consumption - TWh"
          ],
          "as": ["Source", "TWh"]
        },
        { "filter": { "param": "yearBrush" } }
      ],
      "params": [
        {
          "name": "source_highlight",
          "select": { "type": "point", "fields": ["Source"] },
          "bind": "legend"
        }
      ],
      "mark": "line",
      "encoding": {
        "x": { "field": "Year", "type": "temporal", "title": "Year" },
        "y": { "field": "TWh", "type": "quantitative", "title": "Energy Consumption (TWh)" },
        "color": {
          "field": "Source",
          "type": "nominal",
          "title": "Sources of Energy",
          "scale": { "scheme": "darkred" },
          "legend": { "symbolType": "circle", "symbolSize": 140, "titleFontSize": 14, "labelFontSize": 12 }
        },
        "opacity": {
          "condition": { "param": "source_highlight", "value": 1 },
          "value": 0.15
        },
        "tooltip": [
          { "field": "Year", "type": "temporal" },
          { "field": "Source", "type": "nominal" },
          { "field": "TWh", "type": "quantitative", "format": ".2f" }
        ]
      }
    },
    {
      "width": 800,
      "height": 70,
      "title": "Year Range Filter",
      "data": {
        "url": "https://raw.githubusercontent.com/ananya21233/FIT3179_Assignment_2/main/data/energy_consumption_by_source.csv"
      },
      "transform": [
        {
          "fold": [
            "Solar consumption - TWh",
            "Wind consumption - TWh",
            "Coal consumption - TWh",
            "Gas consumption - TWh",
            "Oil consumption - TWh"
          ],
          "as": ["Source", "TWh"]
        }
      ],
      "params": [
        { "name": "yearBrush", "select": { "type": "interval", "encodings": ["x"] } }
      ],
      "mark": "line",
      "encoding": {
        "x": { "field": "Year", "type": "temporal", "title": "Year" },
        "y": {
          "aggregate": "sum",
          "field": "TWh",
          "title": "",
          "axis": { "grid": false, "labels": false, "ticks": false }
        }
      }
    }
  ]
}